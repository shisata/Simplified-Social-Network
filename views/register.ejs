<!-- Register account page -->
<%- include('header') %>

<body>
  <h1>Register</h1>
  <form method="post" action="/register">
      <label for="email">Email:</label><br>
      <input type="email" id="email" name="email" placeholder="abc@example.com"  
      value="<%= typeof email != 'undefined' ? email : '' %>"
      ><br>
      <label for="password">Password:</label><br>
      <input type="password" id="password" name="password" placeholder="***" 
      value="<%= typeof password != 'undefined' ? password : '' %>"
      ><br>
      <label for="password2">Please re-enter your Password:</label><br>
      <input type="password" id="password2" name="password2" placeholder="***" 
      value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      ><br>
      <label for="fname">First name:</label><br>
      <input type="text" id="fname" name="fname" placeholder="abc" 
      value="<%= typeof fname != 'undefined' ? fname : '' %>"
      ><br>
      <label for="lname">Last name:</label><br>
      <input type="text" id="lname" name="lname" placeholder="abc" 
      value="<%= typeof lname != 'undefined' ? lname : '' %>"
      ><br>
      <input type="submit" id="submit">
  </form>

</body>

</html>
